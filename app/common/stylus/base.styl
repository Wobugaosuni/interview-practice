html, body
  font-family 'Avenir', Helvetica, Arial, sans-serif
  font-weight normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #2c3e50
  font-size 14px

ul
  list-style none
  margin 0
  padding 0

.FBH
  display flex

.FBJS
  justify-content space-between

.mt40
  margin-top 40px

.mt12
  margin-top 12px

button 
  display block
  cursor pointer
  height 22px

.hand
  cursor pointer

table
  border 1px solid #e8e8e8
  border-right 0
  border-bottom 0
  border-spacing 0

  th, td
    border-right 1px solid #e8e8e8
    border-bottom 1px solid #e8e8e8
    padding 8px